@model StackUndertow.Models.Question

@{
    ViewBag.Title = "Create";
}



<section id="contact" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="header-h text-center">Ask a Question</h1>

                @using (Html.BeginForm())
                {
                    <div class="col-md-8 col-md-offset-2">

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <!---------TITLE--------->
                            @Html.LabelFor(model => model.Title)<br />
                            <div class="form-group">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <!----------BODY--------->
                            @Html.LabelFor(model => model.Body)<br />
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Body, new { Class = "form-control ans-textarea", Rows = "4" })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row marb-35">
                            <p class="header-p">
                                Click "Create" only once!
                            </p>
                            <div class="btnpad">
                                <!---------SUBMIT------------>
                                <div class="contacts-btn-pad">
                                    <input type="submit" value="Create" class="btn contacts-btn" />
                                </div>
                            </div>
                        </div>
                }

                <!-----------SCREENSHOT------------->
                <p class="marb-35 text-center">Add a Screenshot (only after you've clicked "Create" above, please).</p>

                <p class="header-p">Caption your attachment (optional):</p>
                @Html.Partial("_ImgUploader")


            </div>
        </div>
    </div>



</div>
</section>
