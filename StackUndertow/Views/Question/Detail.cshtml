@model StackUndertow.Models.Question

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>
<div class="row">
    <div class="col-md-6">
        <h1>@Model.Title</h1>
        <hr />
        <h3>@Model.Owner.UserName asked: </h3>
        <p>@Model.Body</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Add Your Answer:</h3> <!--https://github.com/NicholasSaravia/StackUndertow-->
        @using (Html.BeginForm("AddAnswer", "Answer", new { id = Model.Id, command = "Answer" }))
        {
            <input type="text" id="body" name="body" />
            <input type="submit" class="btn btn-default" value="Answer" name="command" />
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-1">
        @foreach (var answer in ViewBag.AnswerList)
        {
            <div class="row">
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-md-4">
                        @using(Html.BeginForm("Vote", "Answer", new { id = Model.Id, ansId = answer.Id }))
                    {
                            <input type="submit" class="btn btn-success" value="UpVote" name="command" />
                            <input type="submit" class="btn btn-primary" value="DownVote" name="command" />
                        }
                    </div>
                }
                <div class="col-md-8">
                    <h4>@answer.Owner.UserName answered on @answer.Created.ToString("dd MMM yyyy")</h4>
                    <p>@answer.Body</p>
                    <p>Score: @answer.Score</p>
                </div>
            </div>
        }

    </div>
</div>
