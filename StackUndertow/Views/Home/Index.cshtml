@{
    ViewBag.Title = "Home Page";
}

<!--BANNER-->
<section id="banner">
    <div class="bg-color">
        <div class="row">
            <div class="inner text-center">
                <h1 class="logo-name">Stack Undertow</h1>
                <h2>Where questions get answered.</h2>
            </div>
        </div>
    </div>
</section>

<!----LATEST QUESTIONS----->
<div class="row padb-35">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <h4>LATEST QUESTIONS</h4>
            </div>
        </div>
        @foreach (var question in Model)
        {
            <div class="row home-content">
                <div class="col-lg-10">
                    <h2><a href="/Detail/@question.Id" class="main">@question.Title</a></h2>
                    <p>From <a href="/u/@question.Owner.UserName">@question.Owner.UserName</a> on @question.Created.ToString("dd MMM yyyy")</p>
                </div>
                <div class="col-lg-2">
                </div>
            </div>
        }
        <div class="row">
            <div class="col-lg-offset-10 col-lg-2">
                <p>@Html.ActionLink("All Questions", "Index", "Question")</p>
            </div>
        </div>
    </div>
</div>
