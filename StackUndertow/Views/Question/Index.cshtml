@model IEnumerable<StackUndertow.Models.Question>

@{
    ViewBag.Title = "All Questions";
}

<h2>@ViewBag.Title</h2>
<a href="@Url.Action("Create", "Question")" class="btn btn-toolbar"><span class="glyphicon glyphicon-plus"></span> Ask a Question</a>
<div class="row">
    <div class="col-md-6">
        @foreach (var question in Model)
        {
           <h1><a href="Detail/@question.Id">@question.Title</a></h1>
           <hr />
           <h3><a href= "User/@question.Owner.UserName"> @question.Owner.UserName</a> asked: </h3>
           <p>@question.Body</p>           
        }
    </div>
</div>