@model IEnumerable<StackUndertow.Models.Question>

@{
    ViewBag.Title = "All Questions";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        @foreach (var question in Model)
        {
           <h1><a href="Detail/@question.Id">@question.Title</a></h1>
           <hr />
           <h3><a href= "User/@question.Owner.UserName"> @question.Owner.UserName asked: </a></h3>
           <p>@question.Body</p>           
        }
    </div>
</div>