@model StackUndertow.Models.ApplicationUser

@{
    ViewBag.Title = "Index";
}

<h1>@Model.UserName</h1>
<h4>Score: @ViewBag.Score</h4>

<div class="row">
    <div class="col-md-6">
        <h2>Questions:</h2>
        @foreach (var question in ViewBag.questionList)
        {
            <h3><a href="Detail/@question.Id">@question.Title</a> from @question.Owner.UserName</h3>
            <p>@question.Body</p>
            <p>@question.Created</p>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Answers:</h2>
        @foreach (var answer in ViewBag.answerList)
        {
            <h3><a href="Detail/@answer.QuestionId">@answer.Question.Title</a></h3>
            <p>@answer.Question.Body</p>
            <hr />
            <p>@answer.Body</p>
            <p>@answer.Created</p>
        }
    </div>
</div>