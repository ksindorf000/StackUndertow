@model StackUndertow.Models.Question

@{
    ViewBag.Title = "Edit";
}

<section id="contact" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="header-h">Edit </h1>
                <h3>@Model.Title</h3>
                <span class="marb-35">&nbsp;</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <!--TITLE-->
                        @Html.LabelFor(model => model.Title)<br />
                        <div class="form-group">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <!--BODY-->
                        @Html.LabelFor(model => model.Body)<br />
                        <div class="form-group">
                            @Html.TextAreaFor(model => model.Body, new { Class = "form-control ans-textarea", Rows = "4" })
                            @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row marb-35">
                        <div class="btnpad">
                            <!--SUBMIT-->
                            <div class="contacts-btn-pad">
                                <input type="submit" value="Save" class="btn contacts-btn" />
                            </div>
                        </div>
                    </div>
                }

                <!-----------SCREENSHOT------------->
                <div class="marb-35 text-center">
                    <p>
                        Add a Screenshot <br/>
                        <span class="header-p">
                            <strong>This will replace your current attachment.</strong>
                        </span>
                    </p>
                </div>

                <p class="header-p">
                    Caption your attachment (optional):
                </p>

                @Html.Partial("_ImgUploader", new { id = Model.Id })


            </div>
        </div>
    </div>
</section>
