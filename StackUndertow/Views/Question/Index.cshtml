@model IEnumerable<StackUndertow.Models.Question>

@{
    ViewBag.Title = "All Questions";
}

<section id="menu-list" class="section-padding">
    <div class="container">
        <div class="row">
            <!-----------HEADER------------->
            <div class="col-md-12 text-center marb-35">
                <h1 class="header-h">@ViewBag.Title</h1>

                <!-----------ADD QUESTION------------->
                <p class="header-p">
                    <a href="@Url.Action("Create", "Question")" class="btn btn-toolbar">
                        <span class="glyphicon glyphicon-plus"></span>
                        Ask a Question
                    </a>
                </p>
            </div>

            <!-----------QUESTION LIST------------->
            <div id="Container">
                @foreach (var question in Model)
            {
                    <div class="row home-content">
                        <div class="col-lg-12">
                            <h2><a href="/Detail/@question.Id" class="main">@question.Title</a></h2>
                            <p>From <a href="/u/@question.Owner.UserName">@question.Owner.UserName</a> on @string.Format("{0:dd MMM yyyy}", question.Created)</p>
                        </div>
                        <div class="col-lg-12 padb-35">
                            @question.Body
                        </div>
                    </div>
                }
            </div>

        </div>
    </div>
</section>
